{
    "name": "NoteTakerInstant",
    "version": "1.0",
    "manifest_version": 2,
    "description": "A simple website to take instant notes with basic search and mark important properties.",
    "icons": {
        "100": "icon100.png",
        "60": "icon60.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icons": {
            "100": "icon100.png",
            "60": "icon60.png",
            "16": "icon16.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions":[
       "contextMenus",
       "tabs"
    ]
}
